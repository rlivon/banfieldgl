<style>
    body {
        background: #fff;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 20px;
        color: #000;
        margin: 0;
        padding: 0;
    }
    .swiper-container {
        width: 100%;
        padding-top: 10px;
        padding-bottom: 50px;
        margin: 0 auto;
    }
    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 300px;
        height: 450px;
    }
</style>
<a class="btn btn-danger" href="{{cate}}" role="button" target="_blank">{{cate}}</a>
<div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        {{#each photos}}
        {{!-- <img src="{{imageURL}}" alt="" class="swiper-slide"> --}}
        {{!-- <a href="{{imageURL}}" target="_blank" class="btn btn-primary">Ver</a> --}}
        <a href="/image/show/{{_id}}" src="{{imageURL}} title="{{title}}" class="swiper-slide">

            <img src="{{imageURL}}" alt="" class="swiper-slide">
            <li value="{{title}} {{precio}}" class="swiper-wrapper">{{title}}</li>

        </a>
        {{/each}}
    </div>
    <br>
    <br>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
    <!-- If we need navigation buttons -->
    <!-- <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div> -->
    <!-- If we need scrollbar --> 
