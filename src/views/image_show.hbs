<style>
    body {
        background: #fff;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 20px;
        color: #000;
        margin: 0;
        padding: 0;
    }
    .swiper-container {
        width: 100%;
        padding-top: 10px;
        padding-bottom: 60px;
        margin: 0 auto;
    }
    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 300px;
        height: 450px;
    }
</style>
<div class="row">
    <div class="card" style="width: 18rem;">
        <img src="{{imageURL}}" alt="" class="card-img-top">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <h5 class="text-success"><font size=5>{{precio}}</font></h5>
                <a class="btn btn-danger" href="{{urlVenta}}" role="button" target="_blank">Hacé tu pedido Ya!</a>
                <br><br>
                <a href="/" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Descripción</th>
                    {{!-- <th>Categoria</th> --}}
                </tr>
            </thead>
            <tbody>
                    <tr>
                        {{!-- <td style="white-space: pre;">{{description}}</td> --}}
                        <td><textarea name="mensaje" readonly rows="22"; id="mensaje" style="width:890px;border:none">
                            {{description}}</textarea>
                        </td>
                        {{!-- <td>{{categoria}}</td> --}}
                    </tr>
            </tbody>
        </table>
    </div>
</div>